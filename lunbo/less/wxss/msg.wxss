.frc {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.fcc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fsb {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.fsa {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.flex_start {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.flex_end {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.line_20_deg {
  content: '';
  position: absolute;
  right: -64rpx;
  top: 50%;
  display: block;
  width: 1rpx;
  height: 40rpx;
  background: #E5E5E5;
  transform: translateY(-50%) skew(-20deg);
}
page {
  background: #E5E5E5;
}
.tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.tabs .item {
  position: relative;
  width: 184rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0 64rpx;
  border-bottom: 3rpx solid transparent;
  color: #888;
}
.tabs .item:first-child::before {
  content: '';
  position: absolute;
  right: -64rpx;
  top: 50%;
  display: block;
  width: 1rpx;
  height: 40rpx;
  background: #E5E5E5;
  transform: translateY(-50%) skew(-20deg);
  left: -64rpx;
  right: inherit;
}
.tabs .item::after {
  content: '';
  position: absolute;
  right: -64rpx;
  top: 50%;
  display: block;
  width: 1rpx;
  height: 40rpx;
  background: #E5E5E5;
  transform: translateY(-50%) skew(-20deg);
}
.tabs .item.action {
  border-bottom: 3rpx solid #7AA549;
  color: #333;
}
.msgInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin-top: 30rpx;
  background: #fff;
  padding: 0 30rpx;
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium;
  font-size: 30rpx;
  color: #888;
}
.msgInfo .right .btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.msgInfo .right .btn image {
  margin-right: 14rpx;
  width: 42rpx;
  height: 42rpx;
}
.list {
  height: calc(100vh - 228rpx);
}
.list .item {
  position: relative;
  background: #fff;
  margin-top: 10rpx;
  padding: 35rpx 30rpx;
}
.list .item .user {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 42rpx;
}
.list .item .user .avatar {
  margin-right: 16rpx;
  width: 42rpx;
  height: 42rpx;
  border: 1rpx solid #7AA549;
  border-radius: 126rpx;
  flex-shrink: 0;
}
.list .item .user text {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  color: #888;
}
.list .item .user text.hint {
  margin-left: 30rpx;
  color: #7AA549;
}
.list .item .user .line {
  position: relative;
  top: -1rpx;
  display: inline-block;
  width: 40rpx;
  font-size: 26rpx;
  text-align: center;
}
.list .item .msg {
  margin: 35rpx 0;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  color: #333;
  line-height: 52rpx;
}
.list .item .time {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  color: #888;
}
