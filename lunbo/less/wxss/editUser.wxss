.frc {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.fcc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fsb {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.fsa {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.flex_start {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.flex_end {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
page {
  background: #E5E5E5;
}
.title {
  font-size: 32rpx;
  color: #333;
}
.ipt {
  font-size: 32rpx;
  color: #b2b2b2;
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  line-height: 98rpx;
  padding: 0 30rpx;
  background: #fff;
  margin-top: 20rpx;
}
.item .left {
  min-width: 150rpx;
  margin-right: 10rpx;
  font-size: 32rpx;
  color: #333;
}
.item > view:last-child {
  flex: 1;
}
.item input {
  font-size: 32rpx;
  color: #b2b2b2;
  width: 100%;
}
.item .sex {
  font-size: 32rpx;
  color: #888;
}
.item .sex image {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
}
.info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  height: 120rpx;
}
.info .left {
  font-size: 32rpx;
  color: #333;
  margin-right: 10rpx;
  width: 150rpx;
}
.info .nickname {
  font-size: 32rpx;
  color: #333;
}
.info .avatar {
  position: absolute;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #7AA549;
}
.schools {
  font-size: 32rpx;
  color: #333;
}
.schools .addBtn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 189rpx;
  height: 60rpx;
  border: 1rpx solid #7AA549;
  border-radius: 10rpx;
  color: #7AA549;
  font-size: 28rpx;
}
.schoolList {
  max-height: calc(100vh - 830rpx);
  overflow-y: auto;
}
.schoolList .listItem {
  background: #fff;
  padding: 30rpx;
  border-top: 1rpx solid #E5E5E5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.schoolList .listItem .left {
  width: 640rpx;
}
.schoolList .listItem .left .title {
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  color: #333;
  line-height: 52rpx;
}
.schoolList .listItem .left .bottom {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  color: #888;
}
.schoolList .listItem .left .bottom view:first-child {
  margin-right: 45rpx;
}
.schoolList .listItem .right {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.schoolList .listItem .right image {
  margin-left: 20rpx;
  width: 16rpx;
  height: 30rpx;
}
.btBlock {
  height: 200rpx;
  width: 100%;
}
.save {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  padding: 30rpx 30rpx 47rpx;
  background: #fff;
}
.save .btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 100;
  width: 690rpx;
  height: 80rpx;
  background: #7AA549;
  border-radius: 5rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  color: #fff;
}
