page {
  background: #E5E5E5;
}
.searchView {
  position: fixed;
  top: 0;
  z-index: 100;
  background: #fff;
  padding: 25rpx 30rpx;
  width: 100%;
  height: 126rpx;
  box-sizing: border-box;
}
.searchView .searchIcon {
  position: absolute;
  left: 42rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 31rpx;
}
.searchView input {
  padding-left: 55rpx;
  height: 100%;
  background: #F2F2F2;
  font-size: 32rpx;
  color: #888;
}
.list {
  margin-top: 140rpx;
}
.list .item {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
  margin-top: 20rpx;
}
.list .item.friend {
  padding: 0 30rpx;
  height: 210rpx;
}
.list .item.friend::before {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  width: 1rpx;
  height: 100rpx;
  background: #7AA549;
}
.list .item.friend::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 158rpx;
  width: 1rpx;
  height: 100rpx;
  background: #7AA549;
}
.list .item .avatar {
  width: 126rpx;
  height: 126rpx;
  border: 1rpx solid #7AA549;
  border-radius: 126rpx;
  flex-shrink: 0;
}
.list .item .info {
  margin-left: 20rpx;
  flex: 1;
  height: 100%;
}
.list .item .info .top {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  line-height: 50rpx;
}
.list .item .info .top .name {
  min-width: 180rpx;
  height: 50rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list .item .info .top .name text {
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  max-width: 180rpx;
  text-overflow: ellipsis;
}
.list .item .info .bottom {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 110rpx;
}
.list .item .info .bottom .tags {
  font-size: 27rpx;
}
.list .item .info .bottom .tags text {
  position: relative;
  color: #888888;
}
.list .item .info .bottom .tags .line {
  position: relative;
  top: -1rpx;
  display: inline-block;
  width: 40rpx;
  font-size: 26rpx;
  text-align: center;
}
