.list_item_name_box {
  background: #fff;
  font-size: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 25rpx 0 50rpx;
}

.other {
  display: flex;
  height: 80rpx;
  padding: 0 25rpx 0 50rpx;
  align-items: center;
  font-size: 30rpx;
  color: #666;
}

.icon_down_rotate {
  transform: rotate(180deg);
}

.image {
  margin-top: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx #666;
  animation: image 2s ease-in-out infinite;
}

@keyframes image {
  0% {
    /* opacity: 1; */
    transform: rotateY(0deg);
  }

  100% {
    /* opacity: 0; */
    transform: rotateY(360deg);
  }
}


