/* pages/map/map.wxss */

.map {
  width: 100vw;
  height: calc(100vh - 250rpx);
}

.text {
  position: fixed;
  bottom: 0;
  padding: 30rpx 0;
  width: 750rpx;
  height: 250rpx;
  background-color: #fff;
  font-weight: bold;
  box-shadow: 5px 5px 5px 10px #e2e2e2;
  box-sizing: border-box;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.car {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: green;
  color: #fff;
}

.user {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: red;
  color: #fff;
}

.tab {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  margin-top: 20rpx;
  font-size: 14px;
  color: #333;
}

.tab image {
  width: 60rpx;
  height: 60rpx;
}

.index,.me {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100rpx;
}
